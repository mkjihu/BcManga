<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 选中状态  -->
    <item android:state_checked="true" android:drawable="@mipmap/toyado_on"/>
    
    <!-- 按下动作 -->
	<item android:state_pressed="true" android:drawable="@mipmap/toyado_on"/>
	
	<!-- 聚焦 -->
    <item android:state_focused="true" android:drawable="@mipmap/toyado_on"/>
    
    <!-- 是否可用  否-->
    <item android:state_enabled="false" android:drawable="@mipmap/toyado_on"/>
        
    <!-- 是否可用  可-->
    <item android:state_enabled="true" android:drawable="@mipmap/toyado_off"/>
    
    <!-- 一般 -->
    <item  android:drawable="@mipmap/toyado_off" />  
</selector>